---
import { cx, css } from "../../styled-system/css";
import { flex } from "../../styled-system/patterns";

import IndexLayout from "../layouts/index.layout.astro";

import Card from "../isles/ui/card/card.astro";
---

<IndexLayout>
	<main role="main" class={cx( flex(), css({ alignItems: 'center', justifyItems: 'center', justifyContent: 'center', width: '100%', height: '100%' }) )}>
		<Card />
	</main>
	<footer 
		class={
			css({ 
				marginTop: 'auto',
				height: 'fit-content',
				width: '100%',
				textAlign: 'center',
				marginBottom: '1rem',
				backgroundColor: 'white',
				fontFamily: 'figtree_semibold'
			})
		}
	>
		<div role="complementary">
			Challenge by <a href="https://www.frontendmentor.io?ref=challenge" target="_blank" class={css({ color: 'blue' })}>Frontend Mentor</a>. 
			Coded by <a href="https://github.com/MarioA96" target="_blank" class={css({ color: 'blue' })}>MarioA96</a>.
		</div>
	</footer>
</IndexLayout>
